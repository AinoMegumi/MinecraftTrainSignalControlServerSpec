{
    "openapi": "3.0.2",
    "info": {
        "title": "Minecraft鉄道信号制御サーバー(追い越し非対応版)",
        "version": "1.0.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/v1",
            "description": "signal control server"
        }
    ],
    "paths": {
        "/" : {
            "post": {
                "summary": "路線追加",
                "description": "路線を追加します。路線に上り線と下り線がある場合、それらは別の路線として扱われます。",
                "requestBody": {
                    "content": {
                        "text/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "reveals": {
                                        "type": "array",
                                        "description": "信号機パターンコードリスト。このリストは必ず始発駅の出発信号機から順番に設定し、路線内の全ての信号機を登録して下さい。信号機パターンコードはREADME.mdを参照して下さい。",
                                        "example": [3, 3, 3, 4, 3, 0]
                                    },
                                    "name": {
                                        "type": "string",
                                        "description": "路線名",
                                        "example": "天の川高速鉄道天の川第１線下り線"
                                    }
                                },
                                "required": [ "reveals", "name" ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "路線IDと各信号機のIDを返します",
                        "content": {
                            "text/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "routeid": {
                                            "description": "路線ID",
                                            "type": "string",
                                            "example": "57ca4009ce03433286fcbc46edeb1967"
                                        },
                                        "traffics": {
                                            "type": "array",
                                            "description": "信号機ID(始発駅の出発信号機に近い方から順番)",
                                            "example": [ 
                                                "0825a9e7f9464b66b2539ae535400d79", 
                                                "402780daf0964144a2b6f7f9d7517e35",
                                                "e545ab2127a84d6e9a26d425b174643d",
                                                "a7f3de63c17b4d7dbfdd1cd247a9b2cd",
                                                "60ffe7acdebf4bc99bf753d26dcc18e4",
                                                "c71ebe3f84bb4b1fa3fd36ceb0eb2b6d"
                                             ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "路線IDの取得",
                "description": "指定された路線名の路線IDを取得します。",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "路線名",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "天の川高速鉄道天の川第１線下り線"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "路線IDと各信号機のIDを返します",
                        "content": {
                            "text/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "routeid": {
                                            "description": "路線ID",
                                            "type": "string",
                                            "example": "57ca4009ce03433286fcbc46edeb1967"
                                        },
                                        "traffics": {
                                            "type": "array",
                                            "description": "信号機ID(始発駅の出発信号機に近い方から順番)",
                                            "example": [ 
                                                "0825a9e7f9464b66b2539ae535400d79", 
                                                "402780daf0964144a2b6f7f9d7517e35",
                                                "e545ab2127a84d6e9a26d425b174643d",
                                                "a7f3de63c17b4d7dbfdd1cd247a9b2cd",
                                                "60ffe7acdebf4bc99bf753d26dcc18e4",
                                                "c71ebe3f84bb4b1fa3fd36ceb0eb2b6d"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "指定された名前の路線が存在しない"
                    }
                }
            }
        },
        "/{routeid}": {
            "get": {
                "summary": "路線情報の取得",
                "description": "指定されたIDの路線の情報を取得します。",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "路線名",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "天の川高速鉄道天の川第１線下り線"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "路線IDと各信号機のIDを返します",
                        "content": {
                            "text/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "description": "路線名",
                                            "type": "string",
                                            "example": "天の川高速鉄道天の川第１線下り線"
                                        },
                                        "traffics": {
                                            "type": "array",
                                            "description": "信号機ID(始発駅の出発信号機に近い方から順番)",
                                            "example": [ 
                                                "0825a9e7f9464b66b2539ae535400d79", 
                                                "402780daf0964144a2b6f7f9d7517e35",
                                                "e545ab2127a84d6e9a26d425b174643d",
                                                "a7f3de63c17b4d7dbfdd1cd247a9b2cd",
                                                "60ffe7acdebf4bc99bf753d26dcc18e4",
                                                "c71ebe3f84bb4b1fa3fd36ceb0eb2b6d"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "路線IDが存在しない"
                    }
                }
            },
            "delete": {
                "summary": "路線削除",
                "description": "路線を削除します。",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "路線名",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "天の川高速鉄道天の川第１線下り線"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "路線削除成功"
                    },
                    "404": {
                        "description": "路線IDが存在しない"
                    }
                }
            }
        },
        "/{routeid}/{trafficid}": {
            "post": {
                "summary": "信号機の停止現示への変更",
                "description": "列車が指定された信号機の防護区間に進入したことの通知や工事等で信号を停止信号に変える場合に使用します。このリクエストが来ると、指定された信号を停止信号に切り替え、その手前の信号の色の制御も行います。",
                "parameters": [
                    {
                        "name": "routeid",
                        "in": "path",
                        "description": "路線ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "57ca4009ce03433286fcbc46edeb1967"
                        }
                    },
                    {
                        "name": "trafficid",
                        "in": "path",
                        "description": "信号機ID。allを指定すると、全ての信号機を停止現示に、clearを指定すると、全ての信号機を各信号機の現示可能な最大の現示（２灯式RY灯火型の場合は注意、高速進行現示対応信号機は高速進行、それ以外は進行現示)に変更します。",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "0825a9e7f9464b66b2539ae535400d79"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "信号機の現示データ更新成功"
                    },
                    "404": {
                        "description": "路線IDまたは信号機IDが存在しない"
                    }
                }
            },
            "get": {
                "summary": "信号機の現示を取得",
                "description": "指定された信号機の現示を取得します。信号機の現示IDはREADME.mdを参照して下さい。",
                "parameters": [
                    {
                        "name": "routeid",
                        "in": "path",
                        "description": "路線ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "57ca4009ce03433286fcbc46edeb1967"
                        }
                    },
                    {
                        "name": "trafficid",
                        "in": "path",
                        "description": "信号機ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "0825a9e7f9464b66b2539ae535400d79"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "信号機の現示IDを返します。"
                    },
                    "404": {
                        "description": "路線IDまたは信号機IDが存在しない"
                    }
                }
            },
            "delete": {
                "summary": "信号機の削除",
                "description": "指定された信号機を削除します。",
                "parameters": [
                    {
                        "name": "routeid",
                        "in": "path",
                        "description": "路線ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "57ca4009ce03433286fcbc46edeb1967"
                        }
                    },
                    {
                        "name": "trafficid",
                        "in": "path",
                        "description": "信号機ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "0825a9e7f9464b66b2539ae535400d79"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "削除成功"
                    },
                    "404": {
                        "description": "路線IDまたは信号機IDが存在しない"
                    }
                }
            }
        },
        "/{routeid}/{trafficid}/{traffictypeid}": {
            "post": {
                "summary": "信号機の追加",
                "description": "指定された信号機の次に新しい信号機を１つ追加します",
                "parameters": [
                    {
                        "name": "routeid",
                        "in": "path",
                        "description": "路線ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "57ca4009ce03433286fcbc46edeb1967"
                        }
                    },
                    {
                        "name": "trafficid",
                        "in": "path",
                        "description": "信号機ID。始発駅の出発信号機の前に追加したい場合は値を'front'にして下さい。",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "0825a9e7f9464b66b2539ae535400d79"
                        }
                    },
                    {
                        "name": "traffictypeid",
                        "in": "path",
                        "description": "信号機パターンコード",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 3
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "追加した信号機のIDを返します。"
                    },
                    "404": {
                        "description": "路線IDまたは信号機IDが存在しない"
                    }
                }
            },
            "put": {
                "summary": "信号機の種別変更",
                "description": "指定された信号機の種類を変更します",
                "parameters": [
                    {
                        "name": "routeid",
                        "in": "path",
                        "description": "路線ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "57ca4009ce03433286fcbc46edeb1967"
                        }
                    },
                    {
                        "name": "trafficid",
                        "in": "path",
                        "description": "信号機ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "0825a9e7f9464b66b2539ae535400d79"
                        }
                    },
                    {
                        "name": "traffictypeid",
                        "in": "path",
                        "description": "新しい信号機パターンコード",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 3
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "信号機種別変更成功"
                    },
                    "404": {
                        "description": "路線IDまたは信号機IDが存在しない"
                    }
            }
        }
    }
}