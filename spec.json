{
    "openapi": "3.0.2",
    "info": {
        "title": "Minecraft Train Signal Control Server",
        "version": "1.0.0.0"
    },
    "servers": [
        {
            "url": "https://signalctl.minecraft.kamioda.tokyo/v1",
            "description": "signal control server"
        }
    ],
    "paths": {
        "/" : {
            "post": {
                "summary": "路線追加",
                "description": "路線を追加します。路線に上り線と下り線がある場合、それらは別の路線として扱われます。",
                "responses": {
                    "200": {
                        "description": "路線IDを返します",
                        "content": {
                            "text/plain": {
                                "example": "57ca4009-ce03-4332-86fc-bc46edeb1967"
                            }
                        }
                    }
                }
            }
        },
        "/{routeid}": {
            "post": {
                "summary": "信号機の情報追加",
                "description": "路線の信号機の現示情報を追加します。",
                "parameters": [
                    {
                        "name": "routeid",
                        "description": "路線ID",
                        "required": true,
                        "in": "path",
                        "schema": {
                            "type": "string",
                            "example": "57ca4009-ce03-4332-86fc-bc46edeb1967"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "text/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "reveals": {
                                        "type": "array",
                                        "description": "各信号機の現示コードリスト。このリストは必ず始発駅の出発信号機から順番に設定し、路線内の全ての信号機を登録して下さい。信号現示コードはREADME.mdを参照して下さい。",
                                        "example": [3, 3, 3, 4, 3, 0]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "各信号機のIDを配列で返します。配列は始発駅から順番になっています。"
                    },
                    "404": {
                        "description": "路線が存在しない"
                    }
                }
            }
        }
    }
}